  	var map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: 17, lng: 83},
    zoom: 12
  });
  directionsDisplay.setMap(map);
  directionsDisplay.setDirections(resultData);
  }else{
  alert("Error while getting directions");
  }
  });
  }else{
