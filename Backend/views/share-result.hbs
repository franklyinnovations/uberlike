    <script type="text/javascript">
$(document).ready(function(){
var passedData = {};
passedData.user_id = $("#user_id").text();
passedData.trip_id = $("#trip_id").text();
$.ajax({
  method: "POST",
  url: "/passengers/sharedcontact/userinfo",
  data: passedData
})
  .done(function( results ) {
